# Message Forwarder Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=password

FORWARD_SMS_TO=+1987654321
FORWARD_EMAIL_TO=other@example.com
SKIP_TWILIO=true    # If true, SMS forwarding via Twilio is disabled (useful for dev/testing)

PORT=3000
SESSION_SECRET=your_session_secret

# OAuth Configuration
# Google OAuth2 for Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Discord OAuth2 for Bot Management
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Slack OAuth2 for Workspace Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REDIRECT_URI=http://localhost:3000/auth/slack/callback

# Service Configuration (Manual Setup)
# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Slack Bot (Alternative to OAuth)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=general

# Textbelt (free SMS alternative to Twilio)
TEXTBELT_API_KEY=your_textbelt_api_key
